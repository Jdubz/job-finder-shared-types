#!/bin/sh
. "$(dirname "$0")/_/h"

# Pre-commit hook: Blocking lint and typecheck
echo "🔍 Running pre-commit checks..."

# Run lint (typecheck for this repo)
echo "📝 Linting and type checking..."
npm run lint || {
  echo "❌ Type checking failed! Please fix TypeScript errors before committing."
  exit 1
}

echo "✅ Pre-commit checks passed!"
